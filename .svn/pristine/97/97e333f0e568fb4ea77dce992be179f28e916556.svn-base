body {
    overflow-x: hidden;

    width: 100vw;
}

.my-nav {
    font-size: 1.6rem;
    /* height: 40px !important; */
    z-index: 100 !important;

    width: 100vw;
    height: 40px !important;

    border: none;
    background: rgba(33, 56, 80, 1) !important;
}

.nav-header {
    height: 40px !important;
}

.nav-header img {
    width: 170px;
    min-width: 170px;
    height: 40px;
    min-height: 40px;
    margin: 5px 1vw;
}

.nav-content {
    height: 40px !important;
}

.nav-content>ul>li {
    margin: 5px 0;
}

.nav-content>ul>li>a {
    height: 40px !important;

    color: gray !important;
    background: rgba(33, 56, 80, 1) !important;
}

.nav-content>ul>li>a:hover {
    color: white !important;
}

.nav-content .back {
    position: absolute;
    bottom: 0;
    left: 0;

    width: 120px;
    height: 3px;

    background-color: #0cf;
}

.dropdown a:focus {
    /* background: rgba(33, 56, 120, 1) !important; */
    color: white !important;
}

.dropdown-menu {
    margin-top: 10px !important;
    margin-left: -10px !important;

    background: rgba(0, 0, 0, .8) !important;
}

.dropdown-menu a {
    color: white !important;
}

.dropdown-menu a:hover {
    font-size: 1.5rem;
    font-weight: bold !important;

    color: red !important;
    background: rgba(0, 0, 0, 0) !important;
}




footer {
    font-size: 1rem;

    position: relative;
    bottom: 0;

    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;

    width: 100vw;
    height: 40px;

    background: rgba(33, 56, 80, 1);

    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
}

footer span {
    color: white;
}

footer span a {
    font-weight: bold;

    text-decoration: none;

    color: red;
}



